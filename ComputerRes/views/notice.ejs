<!DOCTYPE html>
<html>
<head>
    <style>
        #infoType li a{
            padding:16px 15px;
            font-size:15px
        }
    </style>

    <title>通知</title>
    <link rel="stylesheet" href="/css/jqpagination.css" />
    <%- include headInclude.ejs %>
    <script id="template" type="text/html">
        <li class="list-group-item ">

            <a class="" href="#">
                <small class="pull-right text-muted" style="width: 110px;">{time}</small>
                <strong>{ms_name}</strong>
                <span>{notice}</span>
                <span class="item-type" style="display: none;">{type}</span>
    </script>
    <script id="get-pager" type="text/html">
        <div id="pager" class="pull-right" style="margin: 0!important;height:30px;">
            <a href="#" class="first btn btn-sm btn-primary" data-action="first"><i class="fa fa-backward"></i></a>
            <a href="#" class="previous btn btn-sm btn-primary" data-action="previous"><i class="fa fa-chevron-left"></i></a>
            <input type="text" readonly="readonly" data-max-page="40" style="width:60px;text-align:center;"/>
            <a href="#" class="next btn btn-sm btn-primary" data-action="next"><i class="fa fa-chevron-right"></i></a>
            <a href="#" class="last btn btn-sm btn-primary" data-action="last"><i class="fa fa-forward"></i></a>
        </div>
    </script>
</head>
<body class="sticky-header">
<section>
    <%- include header.ejs %>
    <div class="main-content">
    <%- include nav.ejs %>
    <div style="min-height: 600px;">
        <div class="wrapper">

            <div class="mail-box">
                <aside class="mail-nav mail-nav-bg-color">
                    <header class="header"> <h4>消息列表</h4> </header>
                    <div class="mail-nav-body">
                        <div class="text-center">
                            <a class="btn btn-compose" href="#" onclick="showPartTag('all')" onmouseover="this.innerHTML = '查看全部'" onmouseout="this.innerHTML = '分类查看'">
                                分类查看
                            </a>
                        </div>
                        <ul id="infoType" class="nav nav-pills nav-stacked mail-navigation">
                            <li><a href="#" onclick="showPartTag('startRun')"> <i class="fa fa-play"></i> 开始运行  <span id="startRun" class="label label-info pull-right inbox-notification"></span></a></li>
                            <li><a href="#" onclick="showPartTag('stopRun')"> <i class="fa fa-stop"></i> 停止运行 <span id="stopRun" class="label label-info pull-right inbox-notification"></span></a></li>
                            <li><a href="#" onclick="showPartTag('delServer')"> <i class="fa fa-trash-o"></i> 删除服务 <span id="delServer" class="label label-danger pull-right inbox-notification"></span></a></li>
                        </ul>
                    </div>
                </aside>
                <section class="mail-box-info">
                    <header id="header" class="header">
                        <div id="pager" class="pull-right" style="margin: 0!important;height:30px;">
                            <a href="#" class="first btn btn-sm btn-primary" data-action="first"><i class="fa fa-backward"></i></a>
                            <a href="#" class="previous btn btn-sm btn-primary" data-action="previous"><i class="fa fa-chevron-left"></i></a>
                            <input type="text" readonly="readonly" data-max-page="40" style="width:60px;text-align:center;"/>
                            <a href="#" class="next btn btn-sm btn-primary" data-action="next"><i class="fa fa-chevron-right"></i></a>
                            <a href="#" class="last btn btn-sm btn-primary" data-action="last"><i class="fa fa-forward"></i></a>
                        </div>

                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <button id="btn-refresh" onclick="refresh()" class="btn btn-sm btn-primary"><i class="fa fa-refresh"></i></button>
                            </div>
                            <div style="margin-left: 80px;">
                                <button id="btn-HasReaded" onclick="markAll(0)" class="btn btn-sm btn-primary"><i class="fa fa-check"></i>&nbsp&nbsp全部标为已读</button>
                                <!--<button id="btn-NoReaded" onclick="markAllNotRead()" class="btn btn-sm btn-primary"><i class="fa fa-comment"></i>&nbsp&nbsp全部标为未读</button>-->
                            </div>
                        </div>

                    </header>

                    <section class="mail-list">
                        <ul id="notices" class="list-group "></ul>
                    </section>

                </section>
            </div>
        </div>
    </div>
    <%- include footer.ejs %>
    </div>
</section>
<%- include footerInclude.ejs %>

<script src="/js/jquery.jqpagination.js"></script>
<script type="text/javascript" src="/js/geomodel/notice.js"></script>
<script type="text/javascript">

</script>

</body>
</html>
